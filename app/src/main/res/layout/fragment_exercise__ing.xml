<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Exercise.Exercise_IngFragment">

    <ImageView
        android:id="@+id/exercise_imageview"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/list_textview"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:background="@drawable/shape_round_edge"
        android:fontFamily="@font/jua"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise_imageview"
        android:text=" 1 / 4 세트"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>
    <View
        android:id="@+id/timer_view"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_textview"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/timer_min"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:fontFamily="@font/jua"
        android:gravity="center"
        android:text="00"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@id/timer_view"
        app:layout_constraintTop_toTopOf="@id/timer_view"
        app:layout_constraintBottom_toBottomOf="@id/timer_view"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/timer_center"
        android:layout_width="10dp"
        android:layout_height="70dp"
        android:fontFamily="@font/jua"
        android:gravity="center"
        android:text=":"
        android:textSize="50sp"

        app:layout_constraintStart_toEndOf="@id/timer_min"
        app:layout_constraintTop_toTopOf="@id/timer_view"
        app:layout_constraintBottom_toBottomOf="@id/timer_view"

        />
    <TextView
        android:id="@+id/timer_sec"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:fontFamily="@font/jua"
        android:gravity="center"
        android:text="00"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@id/timer_center"
        app:layout_constraintTop_toTopOf="@id/timer_view"
        app:layout_constraintBottom_toBottomOf="@id/timer_view"
        />
    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_play_btn"
        app:layout_constraintEnd_toStartOf="@id/pause_btn"
        app:layout_constraintTop_toBottomOf="@id/timer_view"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"/>
    <TextView
        android:id="@+id/play_txt"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:fontFamily="@font/jua"
        android:text="운동 시작"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/play_btn"
        app:layout_constraintEnd_toEndOf="@id/play_btn"
        app:layout_constraintTop_toBottomOf="@id/play_btn"
        />
    <ImageView
        android:id="@+id/pause_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_pause_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_view"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/pause_text"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:fontFamily="@font/jua"
        android:text="일시정지"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/pause_btn"
        app:layout_constraintEnd_toEndOf="@id/pause_btn"
        app:layout_constraintTop_toBottomOf="@id/pause_btn"
        />

    <ImageView
        android:id="@+id/stop_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_stop_btn"
        app:layout_constraintStart_toEndOf="@id/pause_btn"
        app:layout_constraintTop_toBottomOf="@id/timer_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>
    <TextView
        android:id="@+id/stop_text"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:fontFamily="@font/jua"
        android:text="운동 완료"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/stop_btn"
        app:layout_constraintEnd_toEndOf="@id/stop_btn"
        app:layout_constraintTop_toBottomOf="@id/stop_btn"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/ing_group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="list_textview,pause_btn,play_btn,stop_btn,play_txt,pause_text,stop_text"/>
    <TextView
        android:id="@+id/rest_textview"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:background="@drawable/shape_round_gray"
        android:fontFamily="@font/jua"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise_imageview"
        android:text=" 휴식 중 "
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/rest_play_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_play_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_view"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/rest_play_txt"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:fontFamily="@font/jua"
        android:text="운동 시작"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/rest_play_btn"
        app:layout_constraintEnd_toEndOf="@id/rest_play_btn"
        app:layout_constraintTop_toBottomOf="@id/rest_play_btn"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/ing_group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:constraint_referenced_ids="rest_play_btn,rest_play_txt,rest_textview"/>



</androidx.constraintlayout.widget.ConstraintLayout>