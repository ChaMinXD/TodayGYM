<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Exercise.Exercise_IngFragment">

    <ImageView
        android:id="@+id/exercise_imageview"
        android:layout_width="210dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/list_textview"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:background="@drawable/shape_round_edge"
        android:fontFamily="@font/jua"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise_imageview"
        android:text=" 1 / 4 μ„ΈνΈ"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>
    <View
        android:id="@+id/timer_view"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_textview"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/timer_min"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:fontFamily="@font/jua"
        android:gravity="center"
        android:text="00"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@id/timer_view"
        app:layout_constraintTop_toTopOf="@id/timer_view"
        app:layout_constraintBottom_toBottomOf="@id/timer_view"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/timer_center"
        android:layout_width="10dp"
        android:layout_height="70dp"
        android:fontFamily="@font/jua"
        android:gravity="center"
        android:text=":"
        android:textSize="50sp"

        app:layout_constraintStart_toEndOf="@id/timer_min"
        app:layout_constraintTop_toTopOf="@id/timer_view"
        app:layout_constraintBottom_toBottomOf="@id/timer_view"

        />
    <TextView
        android:id="@+id/timer_sec"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:fontFamily="@font/jua"
        android:gravity="center"
        android:text="00"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@id/timer_center"
        app:layout_constraintTop_toTopOf="@id/timer_view"
        app:layout_constraintBottom_toBottomOf="@id/timer_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>