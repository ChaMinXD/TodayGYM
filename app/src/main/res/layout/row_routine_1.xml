<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/routine_view"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_edge"
        />
    <TextView
        android:id="@+id/routine_textview"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_edge"
        android:text="루틴이름"
        android:fontFamily="@font/jua"
        android:gravity="left|center"
        android:textSize="20sp"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/routine_view"
        app:layout_constraintTop_toTopOf="@id/routine_view"
        app:layout_constraintBottom_toBottomOf="@id/routine_view"/>
    <ImageView
        android:id="@+id/routine_play_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/shape_edge"
        android:src="@drawable/icon_routine_play"
        app:layout_constraintStart_toEndOf="@id/routine_textview"
        app:layout_constraintTop_toTopOf="@id/routine_view"
        app:layout_constraintBottom_toBottomOf="@id/routine_view"/>
    <ImageView
        android:id="@+id/routine_detail_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/shape_edge"
        android:src="@drawable/icon_detail_btn"
        app:layout_constraintStart_toEndOf="@id/routine_play_btn"
        app:layout_constraintTop_toTopOf="@id/routine_view"
        app:layout_constraintBottom_toBottomOf="@id/routine_view"/>
    <ImageView
        android:id="@+id/routine_del_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/shape_edge"
        android:src="@drawable/icon_del_bnt"
        app:layout_constraintStart_toEndOf="@id/routine_detail_btn"
        app:layout_constraintTop_toTopOf="@id/routine_view"
        app:layout_constraintBottom_toBottomOf="@id/routine_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>