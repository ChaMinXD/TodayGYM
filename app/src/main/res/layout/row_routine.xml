<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/routine_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_round_edge"
        />
    <ImageView
        android:id="@+id/routine_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_exercise"
        app:layout_constraintStart_toStartOf="@+id/routine_view"
        app:layout_constraintTop_toTopOf="@id/routine_view"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/routine_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/routine_view"
        app:layout_constraintEnd_toEndOf="@id/routine_view"
        app:layout_constraintTop_toBottomOf="@id/routine_icon"
        android:text="운동이름"
        android:fontFamily="@font/jua"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/routine_xbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_xbtn"
        app:layout_constraintTop_toTopOf="@id/routine_view"
        app:layout_constraintEnd_toEndOf="@id/routine_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>